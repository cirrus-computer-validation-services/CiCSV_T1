        <script><![CDATA[reopenComment(current.sys_id);

function reopenComment(sys_id) {
	// 
	// Drill down through all child records
	//
	var children = new GlideRecord('x_173342_cicsv_t1_comment');
	children.addQuery('u_reply', sys_id);
	children.query();
	
	while(children.next()) {
		reopenComment(children.sys_id);
		children.u_comment_state = '0';
		children.update();
	}
	
	//
	// When we get back to here set this recodd to accepted.
	//
	// gs.info("Updating comment state for comment: " + sys_id);
	current.u_comment_state = '0';
	current.update();
}]]></script>
